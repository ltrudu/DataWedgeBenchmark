<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Original theme (kept for backwards compatibility) -->
    <style name="Theme.DatawedgeBenchmark.Legacy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Modern DataWedge Benchmark Theme -->
    <style name="Theme.DatawedgeBenchmark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color - Deep Navy -->
        <item name="colorPrimary">@color/dw_primary</item>
        <item name="colorPrimaryVariant">@color/dw_primary_dark</item>
        <item name="colorOnPrimary">@color/dw_text_primary</item>

        <!-- Secondary brand color - Steel Blue -->
        <item name="colorSecondary">@color/dw_accent</item>
        <item name="colorSecondaryVariant">@color/dw_accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and Surface -->
        <item name="android:colorBackground">@color/dw_primary</item>
        <item name="colorSurface">@color/dw_surface</item>
        <item name="colorOnSurface">@color/dw_text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/dw_primary_dark</item>
        <item name="android:navigationBarColor">@color/dw_primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dw_text_primary</item>
        <item name="android:textColorSecondary">@color/dw_text_secondary</item>
        <item name="android:textColorHint">@color/dw_text_hint</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.DatawedgeBenchmark.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.DatawedgeBenchmark.Button.Outlined</item>

        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.DatawedgeBenchmark.CardView</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.DatawedgeBenchmark.Toolbar</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.DatawedgeBenchmark.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dw_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/dw_ripple</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.DatawedgeBenchmark.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/dw_accent</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/dw_accent</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/dw_ripple</item>
    </style>

    <style name="Widget.DatawedgeBenchmark.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/dw_secondary</item>
        <item name="android:textColor">@color/dw_text_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/dw_ripple</item>
    </style>

    <!-- Custom Card Style -->
    <style name="Widget.DatawedgeBenchmark.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dw_card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Custom Toolbar Style -->
    <style name="Widget.DatawedgeBenchmark.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/dw_primary</item>
        <item name="titleTextColor">@color/dw_text_primary</item>
        <item name="subtitleTextColor">@color/dw_text_secondary</item>
    </style>

    <!-- Stats Card Text Styles -->
    <style name="TextAppearance.DatawedgeBenchmark.StatLabel" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dw_text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.DatawedgeBenchmark.StatValue" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/dw_text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.DatawedgeBenchmark.StatValueAccent" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/dw_accent</item>
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>

    <!-- Log Text Style -->
    <style name="TextAppearance.DatawedgeBenchmark.Log" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dw_text_secondary</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!-- Section Title -->
    <style name="TextAppearance.DatawedgeBenchmark.SectionTitle" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dw_text_hint</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
</resources>
